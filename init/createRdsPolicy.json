{
    "Version": "2012-10-17",
    "Statement": [
       {
          "Sid": "AllowCreateDBInstanceOnly",
          "Effect": "Allow",
          "Action": [
             "rds:CreateDBInstance"
          ],
          "Resource": [
             "arn:aws:rds:us-east-1:758373647921:db:djl*",
             "arn:aws:rds:us-east-1:758373647921:og:*",
             "arn:aws:rds:us-east-1:758373647921:pg:*",
             "arn:aws:rds:us-east-1:758373647921:subgrp:tf_db_group"
          ],
          "Condition": {
             "StringEquals": {
                "rds:DatabaseEngine": "mysql",
                "rds:DatabaseClass": "db.t3.micro"
             }
          }
       },
       {
           "Sid": "AllowDescribeDBSubnetGroups",
           "Effect": "Allow",
           "Action": ["rds:DescribeDBSubnetGroups",
                      "rds:ListTagsForResource"],
           "Resource": "arn:aws:rds:us-east-1:758373647921:subgrp:tf_db_group"
       },
       {
          "Sid": "AllowCreateSGs",
          "Effect": "Allow",
          "Action": [
                "ec2:CreateSecurityGroup",
                "ec2:CreateTags"
          ],
          "Resource": [
                "arn:aws:ec2:*:758373647921:security-group-rule/*",
                "arn:aws:ec2:*:758373647921:security-group/*"
          ],
          "Condition": {
                "StringEquals": {
                   "ec2:Region": "us-east-1"
                }
          }
       }
    ]
 }